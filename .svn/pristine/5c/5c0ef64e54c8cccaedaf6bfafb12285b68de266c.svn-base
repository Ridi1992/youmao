<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui_ea"
    android:orientation="vertical" >

    <include layout="@layout/top_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/forget_tel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/baise"
                android:hint="请输入手机号"
                android:paddingLeft="28dp"
                android:textColor="@color/hui_99"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:background="@color/baise"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/forget_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:hint="请输入验证码"
                    android:paddingLeft="28dp"
                    android:textColor="@color/hui_99"
                    android:textSize="14sp" />

                    <Button
                        android:id="@+id/forget_getcode"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/selector_cart_btn"
                        android:padding="3dp"
                        android:text="获取验证码"
                        android:textColor="@color/second_color"
                        android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/forget_newpassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:background="@color/baise"
                android:hint="请输入新密码"
                android:paddingLeft="28dp"
                android:textColor="@color/hui_99"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/forget_newpassword2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:background="@color/baise"
                android:hint="确认新密码"
                android:paddingLeft="28dp"
                android:textColor="@color/hui_99"
                android:textSize="14sp" />

            <Button
                android:id="@+id/forget_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_address_btn"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="确认修改"
                android:textColor="@color/baise"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>