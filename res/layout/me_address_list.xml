<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui_ea"
    android:orientation="vertical" >
    
    <include layout="@layout/top_title"/>
    
    <ListView 
        android:id="@+id/adderss_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:divider="@color/hui_ea"
        android:dividerHeight="1px"
        android:listSelector="@null"
        ></ListView>
    
    <Button 
        android:id="@+id/adderss_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="增加收货地址"
        android:textSize="13sp"
        android:textColor="@drawable/selector_address_text"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/selector_address_btn"
        />
</LinearLayout>
