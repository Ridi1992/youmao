<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button 
            android:id="@+id/goods_count_min"
            android:layout_width="35dp"
            android:layout_height="28dp"
            android:background="@drawable/shopping_min_btn" />

       <TextView 
            android:id="@+id/goods_count_num"
            android:layout_width="62dp"
            android:layout_height="28dp"
            android:background="@drawable/shopping_num_bg"
            android:enabled="false"
            android:gravity="center"
            android:maxWidth="62dp"
            android:numeric="integer"
            android:padding="3dp"
            android:singleLine="true"
            android:textColor="#000000"/>

       <Button 
            android:id="@+id/goods_count_max"
            android:layout_width="35dp"
            android:layout_height="28dp"
            android:background="@drawable/shopping_sum_btn" />

    </LinearLayout>

</LinearLayout>