<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui_ea"
    android:orientation="vertical" >

    <include layout="@layout/top_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/baise"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/orderback_goods_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/baise"
                android:divider="@color/hui_ea"
                android:dividerHeight="1px" >
            </ListView>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="请选择类型"
                    android:textSize="13sp"
                    android:textColor="@color/hui_66"
                    />

                <LinearLayout
                    android:id="@+id/orderback_line101"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/orderback_line101_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/gouxuan_false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退货"
                        android:textColor="@color/hui_66"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/orderback_line102"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/orderback_line102_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/gouxuan_false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="换货"
                        android:textColor="@color/hui_66"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/orderback_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_yuanjiao_back"
                android:gravity="top"
                android:hint="请写下退换货原因"
                android:minHeight="70dp"
                android:padding="5dp"
                android:textColor="@color/hui_33"
                android:textColorHint="@color/hui_99"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/orderback_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_yuanjiao_back"
                android:gravity="top"
                android:hint="请输入正确联系电话"
                android:padding="5dp"
                android:textColor="@color/hui_33"
                android:textColorHint="@color/hui_99"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="请选择账户 "
                    android:textSize="13sp"
                    android:textColor="@color/hui_66"
                    />

                <LinearLayout
                    android:id="@+id/orderback_line201"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/orderback_line201_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/gouxuan_false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付宝"
                        android:textColor="@color/hui_66"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/orderback_line202"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/orderback_line202_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/gouxuan_false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="银行卡"
                        android:textColor="@color/hui_66"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/orderback_banknumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_yuanjiao_back"
                android:gravity="top"
                android:hint="请输入正确退款账号"
                android:padding="5dp"
                android:textColor="@color/hui_33"
                android:textColorHint="@color/hui_99"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/orderback_bankplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_yuanjiao_back"
                android:gravity="top"
                android:hint="请输入正确银行卡开户行"
                android:padding="5dp"
                android:textColor="@color/hui_33"
                android:textColorHint="@color/hui_99"
                android:textSize="12sp"
                android:visibility="gone"
                 />
            
            <Button 
            android:id="@+id/orderback_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认申请"
            android:textColor="@color/second_color"
            android:textSize="14sp"
            android:background="@drawable/selector_cart_btn"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            />
        </LinearLayout>
    </ScrollView>

</LinearLayout>